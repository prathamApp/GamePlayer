<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pef.non_cog.activities.AssignGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/play">

        <TextView
            android:id="@+id/chooseStudent"
            style="@style/heading"
            android:layout_weight="0.3"
            android:text="@string/chooseStudent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/game1"
                        style="@style/textViewStyle_main_A"
                        android:text="@string/game1" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/game1Spinner"
                        style="@style/textViewStyle_main_A"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/game2"
                        style="@style/textViewStyle_main_A"
                        android:text="@string/game2" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/game2Spinner"
                        style="@style/textViewStyle_main_A"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/game3"
                        style="@style/textViewStyle_main_A"
                        android:text="@string/game3" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/game3Spinner"
                        style="@style/textViewStyle_main_A"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/game4"
                        style="@style/textViewStyle_main_A"
                        android:text="@string/game4" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/game4Spinner"
                        style="@style/textViewStyle_main_A"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/game5"
                        style="@style/textViewStyle_main_A"
                        android:text="@string/game5" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/game5Spinner"
                        style="@style/textViewStyle_main_A"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/playGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_button_normal"
            android:text="play"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>