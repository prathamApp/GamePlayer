<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/background"
    android:layout_margin="8dp">
    <TextView
        android:id="@+id/instructoinForboys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       style="@style/textStyle_instructionForServey"
        android:text="@string/decideGame"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ok"
        android:layout_centerHorizontal="true">
        <ProgressBar
            android:id="@+id/barTimer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"/>

        <TextView
            android:id="@+id/textTimer"
            style="@style/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/numans" />
    </RelativeLayout>
<Button
    android:id="@+id/ok"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:onClick="assignGames"
    android:background="@drawable/round_button_normal"
    android:enabled="false"
    android:text="ok"/>

</RelativeLayout>
