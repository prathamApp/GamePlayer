<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="game_player.pratham.com.gameplayer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PlayGame"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".activities.InstructionForServey"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.ShowInstructions"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.AssignGame"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.WebViewActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.DownloadOrPlaygame"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DownloadData"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>