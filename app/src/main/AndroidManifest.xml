<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pef.non_cog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.pef.non_cog.utils.ApplicationContext"
        android:allowBackup="true"
        android:icon="@drawable/game_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/game_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pef.non_cog.activities.PlayGame"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.pef.non_cog.activities.InstructionForServey"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.pef.non_cog.activities.ShowInstructions"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.pef.non_cog.activities.AssignGame"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.pef.non_cog.activities.WebViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.pef.non_cog.activities.DownloadOrPlaygame"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="com.pef.non_cog.activities.DownloadData"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.pef.non_cog.activities.SplashScreen"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pef.non_cog.activities.GameInfo"
            android:screenOrientation="landscape" />
    </application>

</manifest>